@model BookStore.Models.Cart

@{
    ViewBag.Title = "Cart";
}

<div class="container">
    <h2 class="text-center">Shopping Cart</h2>

    <table class="table">
        <tr>
            <th>Book Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
            @foreach (var cartItem in Model.CartItems)
            {
            <tr>
                <td>@cartItem.Book.Title</td>
                <td>$@cartItem.Book.Price</td>
                <td>@cartItem.Quantity</td>
                <td>$@(cartItem.Book.Price * cartItem.Quantity)</td>
                <td>
                    <a href="/Cart/RemoveFromCart?bookId=@cartItem.Book.BookId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            }
    </table>

    
    <div>
        @if (!User.Identity.IsAuthenticated)
        {
            <a href="#!"><button class="btn btn-success" disabled>Checkout</button></a>
        }
        else
        {
            <a href="/Cart/Checkout/"><button class="btn btn-success">Checkout</button></a>
        }
    </div>
</div>
