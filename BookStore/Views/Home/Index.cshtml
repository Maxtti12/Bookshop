@model IEnumerable<BookStore.Models.Book>

@{
    ViewBag.Title = "Home Page";
}

<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All Categories</span>
                    </div>
                    <ul>
                        @foreach (var category in ViewBag.CategoryList)
                        {
                            <li style="margin-left: 40px"><a href="/?query=@category.CategoryId">@category.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="/" method="GET">
                            <div class="hero__search__categories">
                                Searching
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" name="query" placeholder="Input book name">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+09 123-456-78</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="row featured__filter">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                                <div class="featured__item">
                                    <div class="featured__item__pic set-bg" data-setbg="img/featured/feature-1.jpg">
                                        <a href="/book/Details/@Html.DisplayFor(modelItem => item.BookId)">
                                            <img class="img-fluid" src="@Html.DisplayFor(modelItem => item.Image)" alt=""
                                                 style="width: 100vw; height: 100vh; max-width: 100%; max-height: 100%;">
                                        </a>
                                        <ul class="featured__item__pic__hover">
                                            <li><a href="/Cart/AddToCart?bookId=@Html.DisplayFor(modelItem => item.BookId)"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="featured__item__text">
                                        <h4><a style="text-decoration:none; color:black" href="/book/Details/@Html.DisplayFor(modelItem => item.BookId)">@Html.DisplayFor(modelItem => item.Title)</a></h4>
                                        <h3><strong>$@Html.DisplayFor(modelItem => item.Price)</strong></h3>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
